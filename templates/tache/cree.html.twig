{% extends 'base.html.twig' %}

{% block title %}Nouvelle tache{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/Formulaires/commun.style.css') }}">
{% endblock %}

{% block body %}
    {{ parent() }}
    <h3>Créer une nouvelle tache</h3>
    <div id="container-form">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div id="container-boutons">
                <button class="custom-btn-primary">Créer une nouvelle tache</button>
                <a class="custom-btn-secondary police-standard-btn" href="{{ path('accueil_taches') }}">Retour à la liste des taches</a>
            </div>  
        {{ form_end(form) }}
    </div>
{% endblock %}