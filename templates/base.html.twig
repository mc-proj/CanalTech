<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Canal Tech{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/base.style.css') }}">
        {% endblock %}
    </head>
    <body>
        <div id="loader"></div>
        {% block body %}
        <h1 class="texte-centre">Test technique Canal Tech</h1>
        <nav class="nav-sans-style texte-centre" id="nav-template">
            <ol id="liste-nav">
                {% if (app.request.attributes.get('_route') is same as "accueil_taches")
                    or (app.request.attributes.get('_route') is same as "nouvelle_tache")
                    or (app.request.attributes.get('_route') is same as "edite_tache")
                    or (app.request.attributes.get('_route') is same as "supprime_tache")
                %}
                    <li class="bloc"><a class="lien-sans-style lien-nav active" href="{{ path('accueil_taches') }}">Taches</a></li> 
                    <li class="bloc"><a class="lien-sans-style lien-nav" href="{{ path('liste_projets') }}">Projets</a></li>
                {% else %}
                    <li class="bloc"><a class="lien-sans-style lien-nav" href="{{ path('accueil_taches') }}">Taches</a></li> 
                    <li class="bloc"><a class="lien-sans-style lien-nav active" href="{{ path('liste_projets') }}">Projets</a></li>
                {% endif %}
            </ol>
        </nav>
        {% endblock %}
    </body>

    {% block javascripts %}
        <script src="{{ asset('js/base.script.js') }}"></script>
    {% endblock %}
</html>
